{
	"name": "basic-library",
	"type": "module",
	"version": "0.0.1",
	"description": "A basic starter library template",
	"author": "Blaque Allen <blaquewithaq@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/blaquewithaq/qstarter#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/blaquewithaq/qstarter"
	},
	"bugs": {
		"url": "https://github.com/blaquewithaq/qstarter/issues"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"check": "biome check --write",
		"build": "bunup",
		"dev": "bunup --watch",
		"release": "bumpp --commit --tag --push"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bun": "latest",
		"bumpp": "^10.3.1",
		"bunup": "^0.15.4",
		"lint-staged": "^16.2.5",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "bunx lint-staged",
		"commit-msg": "bunx commitlint --edit ${1}"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
	}
}
