{
	"name": "mono-database",
	"type": "module",
	"version": "0.0.1",
	"description": "A mono starter database template",
	"author": "Blaque Allen <blaquewithaq@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/blaquewithaq/qstarter#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/blaquewithaq/qstarter"
	},
	"bugs": {
		"url": "https://github.com/blaquewithaq/qstarter/issues"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"check": "biome check --write",
		"build": "bunup --filter database",
		"dev": "bunup --filter database --watch",
		"release": "bumpp --commit --tag --push",
		"supabase:init": "supabase init && bun supabase:disable-analytics",
		"supabase:disable-analytics": "awk '/\\[analytics\\]/ {in_analytics=1} in_analytics && /^enabled[[:space:]]*=/ {$3=\"false\"} /\\[/{if ($0 != \"[analytics]\") in_analytics=0} {print}' supabase/config.toml > supabase/tmp && mv supabase/tmp supabase/config.toml",
		"supabase:start": "supabase start",
		"supabase:stop": "supabase stop",
		"supabase:reset": "supabase db reset",
		"supabase:gen": "supabase gen types typescript --local --schema public > src/supabase.ts"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.76.1",
		"ws": "^8.18.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bun": "latest",
		"bumpp": "^10.3.1",
		"bunup": "^0.15.4",
		"lint-staged": "^16.2.5",
		"simple-git-hooks": "^2.13.1",
		"supabase": "^2.53.6",
		"typescript": "^5.9.3"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "bunx lint-staged",
		"commit-msg": "bunx commitlint --edit ${1}"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
	}
}
