{
	"name": "mono-nuxt",
	"type": "module",
	"version": "0.0.1",
	"description": "A mono starter nuxt template",
	"author": "Blaque Allen <blaquewithaq@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/blaquewithaq/qstarter#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/blaquewithaq/qstarter"
	},
	"bugs": {
		"url": "https://github.com/blaquewithaq/qstarter/issues"
	},
	"scripts": {
		"check": "biome check --write",
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"release": "bumpp --commit --tag --push"
	},
	"dependencies": {
		"nuxt": "^4.1.3",
		"vue": "^3.5.22",
		"vue-router": "^4.5.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"bumpp": "^10.3.1",
		"lint-staged": "^16.2.6",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "bunx lint-staged",
		"commit-msg": "bunx commitlint --edit ${1}"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
	}
}
