{
	"name": "mono-database-nuxt",
	"type": "module",
	"version": "0.0.1",
	"description": "A mono starter with database and nuxt template",
	"author": "Blaque Allen <blaquewithaq@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/blaquewithaq/qstarter#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/blaquewithaq/qstarter"
	},
	"bugs": {
		"url": "https://github.com/blaquewithaq/qstarter/issues"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write",
		"build": "bun --filter '*' build",
		"release": "bumpp -r --commit --tag --push"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bun": "latest",
		"bumpp": "^10.3.1",
		"bunup": "^0.15.4",
		"lint-staged": "^16.2.5",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "bunx lint-staged",
		"commit-msg": "bunx commitlint --edit ${1}"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
	}
}
